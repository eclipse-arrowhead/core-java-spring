[Unit]
Description=arrowhead-plantdescriptionengine
After=network.target mysql.target

[Service]
WorkingDirectory=/etc/arrowhead/systems/plantdescriptionengine
ExecStart=/usr/bin/java -Dlog4j.configurationFile=file:/etc/arrowhead/systems/plantdescriptionengine/log4j2.xml -jar /usr/share/arrowhead/plantdescriptionengine/arrowhead-plantdescriptionengine.jar
ExecStartPost=/bin/bash -c 'sleep 10'
TimeoutStopSec=5
Restart=on-failure
RestartSec=20s
Type=simple
User=arrowhead
Group=arrowhead

[Install]
WantedBy=default.target
